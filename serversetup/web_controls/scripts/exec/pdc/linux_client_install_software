#Website: http://www.karoshi.org.uk
LOG_DATE=`date +%F`
########################
#Check md5checksum
########################
if ! test -f /opt/karoshi/web_controls/checksums/admin_checksums/linux_client_install_software2_cgi
then
echo `date`: linux_client_install_software - No MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
source /opt/karoshi/web_controls/checksums/admin_checksums/linux_client_install_software2_cgi
MD5SUM=`md5sum /var/www/cgi-bin_karoshi/admin/linux_client_install_software2.cgi | cut -d' ' -f1`
[ $MD5SUM'null' = null ] && MD5SUM=not_set
if [ $MD5SUM'check' != $linux_client_install_software2_cgi'check' ]
then
echo `date`: linux_client_install_software - Incorrect MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

#########################
#Get variables
########################
numArgs=$#
if [ $numArgs != 1 ]
then
echo `date`: linux_client_install_software - incorrect number of arguments >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
REMOTE_USER=`echo $* | cut -s -d: -f1`
REMOTE_ADDR=`echo $* | cut -s -d: -f2`
REMOTE_MD5=`echo $* | cut -s -d: -f3`
LINUXVERSION=`echo $* | cut -s -d: -f4`
SOFTWARE=`echo $* | cut -s -d: -f5`
########################
#Check data
########################
if [ $REMOTE_MD5'check' != $MD5SUM'check' ]
then
echo `date`: linux_client_install_software - Not called by linux_client_install_software.cgi >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_USER'null' = null ]
then
echo `date`: linux_client_install_software - Blank remote user >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_ADDR'null' = null ]
then
echo `date`: linux_client_install_software - Blank remote tcpip address >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $LINUXVERSION'null' = null ]
then
echo `date`: linux_client_install_software - Blank linuxversion by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit
fi
if [ $SOFTWARE'null' = null ]
then
echo `date`: linux_client_install_software - Blank software by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ `grep -c ^$REMOTE_USER: /opt/karoshi/web_controls/web_access_admin` != 1 ]
then
echo `date`: linux_client_install_software - access denied to $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

echo `date`: linux_client_install_software - adding $SOFTWARE "for" $LINUXVERSION by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
touch /var/lib/samba/netlogon/linuxclient/$LINUXVERSION/install_list
[ `grep -c ^"$SOFTWARE" /var/lib/samba/netlogon/linuxclient/$LINUXVERSION/install_list` = 0 ] && echo "$SOFTWARE" >> /var/lib/samba/netlogon/linuxclient/$LINUXVERSION/install_list
chmod 0644 /var/lib/samba/netlogon/linuxclient/$LINUXVERSION/install_list
exit
