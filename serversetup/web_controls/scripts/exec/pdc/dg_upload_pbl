#but WITHOUT ANY WARRANTY; without even the implied warranty of
#MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
#GNU General Public License for more details.
#
#You should have received a copy of the GNU General Public License
#along with this program; if not, write to the Free Software
#Foundation, Inc., 59 Temple Place - Suite 330, Boston, MA  02111-1307, USA.
#
#The Karoshi Team can be contacted at: 
#mpsharrad@karoshi.org.uk
#jharris@karoshi.org.uk
#aball@karoshi.org.uk
#
#Website: http://www.karoshi.org.uk
LOG_DATE=`date +%F`
########################
#Check md5checksum
########################
if ! test -f /opt/karoshi/web_controls/checksums/admin_checksums/dg_upload_pbl_process2_cgi
then
echo `date`: dg_upload_pbl - No Admin MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
source /opt/karoshi/web_controls/checksums/admin_checksums/dg_upload_pbl_process2_cgi
MD5SUM=`md5sum /var/www/cgi-bin_karoshi/admin/dg_upload_pbl_process2.cgi | cut -d' ' -f1`
[ $MD5SUM'null' = null ] && MD5SUM=not_set
if [ $MD5SUM'check' != $dg_upload_pbl_process2_cgi'check' ]
then
echo `date`: dg_upload_pbl - Incorrect Admin MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

########################
#Get variables
########################
numArgs=$#
if [ $numArgs != 0 ]
then
echo `date`: dg_upload_pbl - incorrect number of arguments >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

read DATA
DATA=`echo $DATA | tr -cd 'A-Za-z0-9\._:\-'`
if [ $DATA'null' = null ]
then
echo `date`: dg_upload_pbl - no data >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

REMOTE_USER=`echo "$DATA" | cut -s -d: -f1`
REMOTE_ADDR=`echo "$DATA" | cut -s -d: -f2`
REMOTE_MD5=`echo "$DATA" | cut -s -d: -f3`
OVERWRITE=`echo "$DATA" | cut -s -d: -f4`
PBLMD5SUM=`echo "$DATA" | cut -s -d: -f5`
PBLNAME=`echo "$DATA" | cut -s -d: -f6`

########################
#Check data
########################
if [ $REMOTE_MD5'check' != $MD5SUM'check' ] && [ $REMOTE_MD5'check' != $MD5SUM2'check' ]
then
echo `date`: dg_upload_pbl - Not called by dg_upload_pbl.cgi >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_USER'null' = null ]
then
echo `date`: dg_upload_pbl - Blank remote user >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_ADDR'null' = null ]
then
echo `date`: dg_upload_pbl - Blank remote tcpip address >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $PBLMD5SUM'null' = null ]
then
echo `date`: dg_upload_pbl - Blank firstname by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit
fi
if [ $OVERWRITE'null' = null ]
then
echo `date`: dg_upload_pbl - Blank overwrite by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit
fi
if [ $PBLNAME'null' = null ]
then
echo `date`: dg_upload_pbl - Blank surname by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit
fi

if [ `grep -c ^$REMOTE_USER: /opt/karoshi/web_controls/web_access_admin` != 1 ]
then
echo `date`: dg_upload_pbl - access denied to $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

#Check that pbl exists
if [ ! -f /var/www/karoshi/pbl/$PBLNAME ]
then
echo `date`: dg_upload_pbl - pbl does not exist by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

#Check that md5sum is correct for pbl
PBLMD5SUM2=`md5sum /var/www/karoshi/pbl/$PBLNAME | cut -d' ' -f1`
[ $PBLMD5SUM2'null' = null ] && PBLMD5SUM2=notset
if [ $PBLMD5SUM != $PBLMD5SUM2 ]
then
echo `date`: dg_upload_pbl - incorrect md5sum "for" pbl by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

##########################
#Add to pbl file
##########################
#Get squid server name
[ ! -f /opt/karoshi/server_network/proxyserver ] && exit 101
PROXYSERVER=`sed -n 1,1p /opt/karoshi/server_network/proxyserver`

if [ $PROXYSERVER != $HOSTNAME ]
then
ssh -x -o PasswordAuthentication=no $PROXYSERVER '
if [ ! -d /opt/karoshi/.tempdata ]
then
mkdir /opt/karoshi/.tempdata ]
chmod 0700 /opt/karoshi/.tempdata
fi
'
#Copy pbl to proxy server
scp /var/www/karoshi/pbl/$PBLNAME root@$PROXYSERVER:"/opt/karoshi/.tempdata/"
ssh -x -o PasswordAuthentication=no $PROXYSERVER '
if [ '$OVERWRITE' = no ]
then
cat /opt/karoshi/.tempdata/'$PBLNAME' >> /etc/dansguardian/pbl
else
cat /opt/karoshi/.tempdata/'$PBLNAME' > /etc/dansguardian/pbl
fi
#Sort and remove duplicates
sort -u /etc/dansguardian/pbl > /etc/dansguardian/pbl.$$
rm -f /etc/dansguardian/pbl
mv /etc/dansguardian/pbl.$$ /etc/dansguardian/pbl
rm -f /opt/karoshi/.tempdata/'$PBLNAME'
echo \<PRE\>
#Restart Dansguardian
source /opt/karoshi/serversetup/variables/distro
/opt/karoshi/serversetup/distro/$DISTROCHOICE/scripts/control_services/dansguardian_stop
/opt/karoshi/serversetup/distro/$DISTROCHOICE/scripts/control_services/dansguardian_start
echo \</PRE\>
'
else
if [ $OVERWRITE = no ]
then
cat /var/www/karoshi/pbl/$PBLNAME >> /etc/dansguardian/pbl
else
cat /var/www/karoshi/pbl/$PBLNAME > /etc/dansguardian/pbl
fi
#Sort and remove duplicates
sort -u /etc/dansguardian/pbl > /etc/dansguardian/pbl.$$
rm -f /etc/dansguardian/pbl
mv /etc/dansguardian/pbl.$$ /etc/dansguardian/pbl
#Restart Dansguardian
source /opt/karoshi/serversetup/variables/distro
echo \<PRE\>
/opt/karoshi/serversetup/distro/$DISTROCHOICE/scripts/control_services/dansguardian_stop
/opt/karoshi/serversetup/distro/$DISTROCHOICE/scripts/control_services/dansguardian_start
echo \</PRE\>
fi
exit
